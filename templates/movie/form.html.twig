{% extends 'base.html.twig' %}

{% block title %}
	{{ parent()}} - Ajout de film
{% endblock %}

{% block body %}
	<h1 class="mb-5">Ajouter une personne</h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.poster) }}
        {{ form_row(form.duration) }}
        {{ form_row(form.releaseAt) }}
        {{ form_row(form.genre) }}
    
    <div class="mb-2">
        <button class="btn btn-danger" type="submit" name="action">Ajouter</button>
    </div>
    
    {{ form_end(form) }}

{% endblock %}